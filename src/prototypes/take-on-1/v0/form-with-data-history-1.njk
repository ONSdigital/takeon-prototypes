        {{ year1 | addCommas }}
      </td>
      <td class="table__cell">
        {{ year2 | addCommas }}
      </td>
      <td class="table__cell">
        {{ year3 | addCommas }}
      </td>
      <td class="table__cell">
        {{ year4 | addCommas }}
      </td>
      <td class="table__cell to-u-cell-barchart">
        <div role="figure" aria-describedby="period{{period}}" class="to-u-bar-grid" style="width: {{ (year1/maximum)*100 }}%;"><span id="period{{period}}" class="u-vh">{{ (year1/maximum)*100 }}%</span></div>

        <div role="figure" aria-describedby="period{{period}}" class="to-u-bar-grid" style="width: {{ (year2/maximum)*100 }}%;"><span id="period{{period}}" class="u-vh">{{ (year2/maximum)*100 }}%</span></div>

        <div role="figure" aria-describedby="period{{period}}" class="to-u-bar-grid" style="width: {{ (year3/maximum)*100 }}%;"><span id="period{{period}}" class="u-vh">{{ (year3/maximum)*100 }}%</span></div>

