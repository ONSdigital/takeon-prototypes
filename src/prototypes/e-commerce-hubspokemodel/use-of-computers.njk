{% from "components/radios/_macro.njk" import onsRadios %}
{% from "prototypes/link-as-button-accessibility/components/button/_macro.njk" import onsButton %}

{% block main %}
    <a class="previous-link js-previous" href="{{ pageInfo.rootPath }}/">Previous</a>
   <h1 class="u-fs-xl u-mt-s">Does ESSENTIAL ENTERPRISE LTD. use computers?</h1>
   {{ 
    onsPanel({
        body: "<p><strong>Include</strong><br>
<ul><li>Personal computers, portable computers such as laptops, netbooks, tablets and other portable devices such as smartphones and Personal Digital Assistants (PDAs)</ul></li></p>
<p><strong>Exclude</strong><br>
<ul><li>Terminals and computers solely used for Electronic Point of Sale (EPOS) and computer controlled machinery</ul></li>
</p>"
    }) 
}}
<form action="{{ pageInfo.parentPath }}/percentage-of-people.html">
        {{ 
            onsRadios({
                "name": "are-computers-used",
                "classes": "u-mt-m",
                "radios": [
                    {
                        "id": "yes-computers-are-used",
                        "label": {
                            "text": "Yes, computers are used"
                        },
                        "name": "yes-computers-are-used",
                        "attributes": {
                            "data-action-url": pageInfo.parentPath  + "/percentage-of-people.html"
                        }
                    },
                    {
                        "id": "no-computers-are-not-used",
                        "label": {
                            "text": "No, computers are not used"
                        },
                        "name": "no-computers-are-not-used",
                         "attributes": {
                            "data-action-url": pageInfo.parentPath  + "/confirmation.html"
                        }
                    }
                ]
            }) 
        }}
        {{
           onsButton({
                "text": "Save and continue",
                "classes": "u-mt-l"
            })
        }}
    </form>
{% endblock %}
