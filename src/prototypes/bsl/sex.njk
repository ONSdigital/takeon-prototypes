{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}

{% block main %}
    <form action="{{ pageInfo.rootPath }}/country-of-birth.html">
        <div class = "grid__col col-5@m">
            <a class="previous-link js-previous" href="{{ pageInfo.rootPath }}/name.html">Previous</a>
            {{ 
                onsRadios({
                    "legend": "<h1 class=\"u-fs-l\">What is your sex?</h1>",
                    "name": "sex",
                    "radios": [
                        {
                            "id": "male",
                            "label": {
                                "text": "Male"
                            },
                            "value": "male"
                        },
                        {
                            "id": "female",
                            "label": {
                                "text": "Female"
                            },
                            "value": "female"
                        }
                    ]
                }) 
            }}
            {{ onsButton({
                "text": "Save and continue",
                "classes": "u-mt-xl"
            }) }}
        </div>
    </form>
{% endblock %}
